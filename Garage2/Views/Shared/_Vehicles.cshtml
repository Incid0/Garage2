@model IEnumerable<Garage2.Vehicle>

@helper SortHeader(string fieldname, string labelname)
{
    @Html.Raw(ViewBag.SortParam == fieldname ? "<span class=\"glyphicon glyphicon-triangle-top\"></span>&nbsp;" : "")
    @Html.Raw(ViewBag.SortParam == fieldname + "_desc" ? "<span class=\"glyphicon glyphicon-triangle-bottom\"></span>&nbsp;" : "")
    @Ajax.ActionLink(labelname, "Index",
                    new { filter = ViewBag.Filter, sort = fieldname + (ViewBag.SortParam == fieldname ? "_desc" : "") },
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "vehicleList"
                    })
}

<div id="vehicleList">
    <input type="hidden" name="sort" value="@ViewBag.SortParam" />
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @SortHeader("RegNr", Html.DisplayNameFor(model => model.RegNr).ToString())
                </th>
                <th>
                    @SortHeader("Type", Html.DisplayNameFor(model => model.Type).ToString())
                </th>
                <th>
                    @SortHeader("Color", WebUtility.HtmlDecode(Html.DisplayNameFor(model => model.Color).ToString()))
                </th>
                <th>
                    @SortHeader("EntryTime", "Parkeringstid")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="modal-link" href ="@Url.Action("Details", new { id = item.Id })">
                    <td>
                        @Html.DisplayFor(modelItem => item.RegNr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @item.ParkDuration
                    </td>
                    <td>
                        @Html.ActionLink("Redigera", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-xs modal-link" }) &nbsp;
                        @Html.ActionLink("Hämta fordon", "Checkout", new { id = item.Id }, new { @class = "btn btn-info btn-xs modal-link", role = "button" })
                    </td>
                </tr>}
        </table>
    </div>
</div>
