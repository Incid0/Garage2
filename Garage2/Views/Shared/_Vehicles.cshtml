@model IEnumerable<Garage2.Vehicle>

<div id="vehicleList">
    <input type="hidden" name="sort" value="@ViewBag.SortParam" />
    <table class="table">
        <tr>
            <th>
                @Ajax.ActionLink(Html.DisplayNameFor(model => model.RegNr).ToString(), "Index",
                    new { sort = "regnr" },
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "vehicleList"
                    })
            </th>
            <th>
                @Ajax.ActionLink(Html.DisplayNameFor(model => model.Type).ToString(), "Index",
                    new { sort = "type" },
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "vehicleList"
                    })
            </th>
            <th>
                @Ajax.ActionLink(Html.DisplayNameFor(model => model.EntryTime).ToString(), "Index",
                    new { sortOrder = "time" },
                    new AjaxOptions
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "vehicleList"
                    })
                @Html.DisplayNameFor(model => model.EntryTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EntryTime)
                </td>
                <td>
                    @Html.ActionLink("Redigera", "Edit", new { id = item.RegNr }) |
                    @Html.ActionLink("Detaljer", "Details", new { id = item.RegNr }) |
                    @Html.ActionLink("Checka ut", "Checkout", new { id = item.RegNr })
                </td>
            </tr>
        }
    </table>
</div>
