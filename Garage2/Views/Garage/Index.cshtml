@model IEnumerable<Garage2.Vehicle>
@{
    ViewBag.Title = "Överblick parkerade fordon";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <p>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryTime)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryTime)
            </td>
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id=item.RegNr }) |
                @Html.ActionLink("Detaljer", "Details", new { id=item.RegNr }) |
                @Html.ActionLink("Checka ut", "Checkout", new { id=item.RegNr })
            </td>
        </tr>
    }
    
    </table>
    <p>
        <a href="@Url.Action("Park")" class="btn btn-primary btn-lg">Parkera fordon</a>
    </p>
</body>
</html>
